{
  "name": "dokkan",
  "description": "Dokkan DZ",
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "dev": "npm-run-all --parallel --print-label dev:*",
    "dev:next": "npm run dev --workspace=frontend",
    "dev:studio": "npm run dev --workspace=studio",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "lint-staged:frontend": "cd frontend && eslint --fix",
    "lint-staged:studio": "cd studio && eslint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "npm run type-check --workspaces --if-present",
    "test": "npm run test --workspace=frontend --if-present",
    "test:coverage": "npm run test:coverage --workspace=frontend --if-present",
    "import-sample-data": "cd studio && sanity dataset import sample-data.tar.gz --replace",
    "validate": "npm run lint && npm run type-check && npm run test && npm run test:e2e -w frontend",
    "prepare": "test -n \"$CI\" || husky"
  },
  "keywords": [
    "Sanity",
    "Next.js",
    "Headless CMS",
    "Visual Editing",
    "Live Content API (LCAPI)",
    "Real-time"
  ],
  "bugs": {
    "url": "https://github.com/sanity-io/sanity-template-nextjs-clean/issues"
  },
  "homepage": "https://github.com/sanity-io/sanity-template-nextjs-clean#readme",
  "workspaces": [
    "studio",
    "frontend"
  ],
  "lint-staged": {
    "frontend/**/*.{ts,tsx,js,jsx,mjs}": [
      "npm run lint-staged:frontend --",
      "prettier --write"
    ],
    "studio/**/*.{ts,tsx,js,jsx,mjs}": [
      "npm run lint-staged:studio --",
      "prettier --write"
    ],
    "*.{json,md,css,yml,yaml}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.2",
    "@commitlint/config-conventional": "^20.4.2",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.3"
  }
}
